{
  "name": "midway-faas-hexo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "hexo generate",
    "clean": "hexo clean",
    "dev": "npm run local:url & hexo server -p 3000",
    "faas:dev": "npm run local:url & npx f invoke -p",
    "sync": "yuque-hexo sync",
    "local:url": "node scripts/local.js"
  },
  "midway-integration": {
    "lifecycle": {
      "before:package:cleanup": "npm run build"
    }
  },
  "hexo": {
    "version": "4.2.1"
  },
  "yuqueConfig": {
    "postPath": "source/_posts",
    "mdNameFormat": "slug",
    "adapter": "hexo",
    "concurrency": 5,
    "baseUrl": "https://www.yuque.com/api/v2",
    "login": "yantze",
    "repo": "blog",
    "onlyPublished": true,
    "onlyPublic": true
  },
  "dependencies": {
    "@midwayjs/decorator": "^2.0.16",
    "@midwayjs/faas": "^0.3.0",
    "@midwayjs/faas-middleware-static-file": "^0.0.3",
    "hexo": "^4.2.1",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0"
  },
  "devDependencies": {
    "@midwayjs/faas-cli": "1.2.14",
    "@midwayjs/fcli-plugin-fc": "*",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "typescript": "~3.7.2",
    "yuque-hexo": "^1.7.0"
  }
}
