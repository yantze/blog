{
  "name": "midway-faas-hexo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "hexo server -p 3000",
    "build": "hexo generate",
    "clean": "hexo clean",
    "deploy": "midway-bin deploy",
    "dev": "midway-bin dev --ts",
    "test": "midway-bin test --ts",
    "sync": "yuque-hexo sync"
  },
  "midway-integration": {
    "lifecycle": {
      "before:package:cleanup": "npm run build"
    }
  },
  "hexo": {
    "version": "4.2.1"
  },
  "yuqueConfig": {
    "postPath": "source/_posts",
    "mdNameFormat": "slug",
    "adapter": "hexo",
    "concurrency": 5,
    "baseUrl": "https://www.yuque.com/api/v2",
    "login": "yantze",
    "repo": "blog",
    "onlyPublished": true,
    "onlyPublic": true
  },
  "dependencies": {
    "@midwayjs/decorator": "^2.0.16",
    "@midwayjs/faas": "^2.12.2",
    "@midwayjs/faas-middleware-static-file": "^1.0.0",
    "hexo": "^4.2.1",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0"
  },
  "devDependencies": {
    "@midwayjs/cli": "^1.2.45",
    "@midwayjs/fcli-plugin-fc": "^1.2.45",
    "@midwayjs/mock": "^2.8.7",
    "@midwayjs/serverless-app": "^2.8.7",
    "@midwayjs/web": "^2.12.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14",
    "typescript": "^4.0.0",
    "yuque-hexo": "^1.7.0"
  }
}
